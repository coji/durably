{
  "name": "durably-monorepo",
  "private": true,
  "type": "module",
  "license": "MIT",
  "packageManager": "pnpm@10.26.0",
  "scripts": {
    "build": "pnpm -r build",
    "test": "pnpm -r test",
    "test:node": "pnpm --filter @coji/durably test:node",
    "test:browser": "pnpm --filter @coji/durably test:browser",
    "test:react": "pnpm --filter @coji/durably test:react",
    "dev:node": "pnpm --filter example-node dev",
    "dev:browser": "pnpm --filter example-browser dev",
    "dev:react": "pnpm --filter example-react dev",
    "typecheck": "pnpm -r typecheck",
    "lint": "pnpm -r lint",
    "lint:fix": "pnpm -r lint:fix",
    "format": "pnpm -r format",
    "format:fix": "pnpm -r format:fix",
    "validate": "pnpm format && pnpm lint && pnpm typecheck && pnpm test"
  },
  "devDependencies": {
    "@types/node": "^25.0.3",
    "cc-hooks-ts": "2.0.70",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "esbuild"
    ]
  }
}
